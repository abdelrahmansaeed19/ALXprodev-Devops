#!/bin/bash

input_dir="pokemon_data"
output_file="pokemon_report.csv"

# Header for the CSV file
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Process each JSON file
for file in "$input_dir"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file" | awk '{printf "%.2f", $1 / 10}')
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.2f", $1 / 10}')
    echo "$name,$height,$weight" >> "$output_file"
done

# Print report location
echo "CSV Report generated at: $output_file"
echo

# Display report
cat "$output_file"

echo

# Calculate averages using awk (skip header)
awk -F',' 'NR>1 {
    height_sum += $2;
    weight_sum += $3;
    count++
}
END {
    printf "Average Height: %.2f m\n", height_sum / count
    printf "Average Weight: %.2f kg\n", weight_sum / count
}' "$output_file"
