#!/bin/bash

# List of Pokémon (lowercase names)
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Create output directory if it doesn't exist
mkdir -p pokemon_data

# Loop through each Pokémon
for name in "${pokemon_list[@]}"; do
    echo "Fetching data for $name..."
    
    # API request
    response=$(curl -s -w "%{http_code}" -o "pokemon_data/${name}.json" "https://pokeapi.co/api/v2/pokemon/$name")
    
    # Check if successful (HTTP 200)
    if [ "$response" -eq 200 ]; then
        echo "Saved data to pokemon_data/${name}.json ✅"
    else
        echo "❌ Failed to fetch data for $name (HTTP $response)"
        rm -f "pokemon_data/${name}.json"  # Delete invalid file
    fi

    sleep 1  # Delay to avoid rate-limiting
done
